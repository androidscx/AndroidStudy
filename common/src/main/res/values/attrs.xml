<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapeButton">
        <attr name="sGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="sSelector" format="enum">
            <enum name="none" value="0" />
            <enum name="standard" value="1" />
            <enum name="ripple" value="2" />
        </attr>

        <attr name="sSolidColor" format="color" />

        <attr name="sSelectorDefaultColor" format="color" />
        <attr name="sSelectorPressedColor" format="color" />
        <attr name="sSelectorDisableColor" format="color" />

        <attr name="sCornersRadius" format="dimension" />

        <attr name="sCornersTopLeftRadius" format="dimension" />
        <attr name="sCornersTopRightRadius" format="dimension" />
        <attr name="sCornersBottomLeftRadius" format="dimension" />
        <attr name="sCornersBottomRightRadius" format="dimension" />

        <attr name="sStrokeWidth" format="dimension" />
        <attr name="sStrokeColor" format="color" />

        <attr name="sSizeWidth" format="dimension" />
        <attr name="sSizeHeight" format="dimension" />

        <attr name="sElevation" format="dimension" />

        <attr name="sLeftIcon" format="reference" />
        <attr name="sTopIcon" format="reference" />
        <attr name="sRightIcon" format="reference" />
        <attr name="sBottomIcon" format="reference" />
        <attr name="sLeftIconSize" format="dimension" />
        <attr name="sTopIconSize" format="dimension" />
        <attr name="sRightIconSize" format="dimension" />
        <attr name="sBottomIconSize" format="dimension" />
        <attr name="sIconPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BottomNavigationBar">
        <attr name="bnbElevation" format="dimension" />
        <attr name="bnbActiveColor" format="color" />
        <attr name="bnbInactiveColor" format="color" />
        <attr name="bnbBackgroundColor" format="color" />
        <attr name="bnbAnimationDuration" format="integer" />
        <attr name="bnbMode" format="enum">
            <enum name="mode_default" value="0" />
            <enum name="mode_fixed" value="1" />
            <enum name="mode_shifting" value="2" />
            <enum name="mode_fixed_no_title" value="3" />
            <enum name="mode_shifting_no_title" value="4" />
        </attr>
        <attr name="bnbBackgroundStyle" format="enum">
            <enum name="background_style_default" value="0" />
            <enum name="background_style_static" value="1" />
            <enum name="background_style_ripple" value="2" />
        </attr>
        <attr name="bnbAutoHideEnabled" format="boolean" />
    </declare-styleable>
</resources>